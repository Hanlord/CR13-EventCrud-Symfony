{% extends 'base.html.twig' %}
{% block body %}
	{% include "components/navbar.html.twig"%}
	{% for message in app.flashes('notice') %}
		<div class="alert alert-success">
			{{ message }}
		</div>
	{% endfor %}
	<div class="row rows-col-lg-4 rows-col-md-2 rows-col-sm-1 text-center align-items-center">
		<div class="container hero" style="background-image:url('{{ asset('pictures/hero.jpg') }}')" width="100%">
			<br>
			<br>
			<h1 class="hero-text text-center animate__animated animate__tada">Let Us Entertain You!ðŸŽ¬</h1>
		</div>
	</div>
	<br>

	<h2 class="text-center animate__animated animate__rubberBand">âœ¨ Events âœ¨</h2>
	<br>
	<div class="container row d-flex justify-content-center">
	<a class="btn btn-success col-1" href="concert">Concert</a>
	<a class="btn btn-success col-1" href="film">Film</a>
	<a class="btn btn-success col-1" href="sport">Sport</a>
	</div>
	<div class="container">
		<div class="row rows-col-lg-3 rows-col-md-2 rows-col-sm-1 animate__animated animate__fadeInLeft">
			{% for event in events %}
				<div class="col-4 g-4">
					<div class="card" style="width: 18rem;">
						<img src="{{ asset('pictures/' ~ event.picture)}}" class="card-img-top" height="300rem">
						{# <img src="{{event.picture}}" class="card-img-top" height="300rem"> #}
						<div class="card-body">
							<h5 class="card-title">{{event.name}}</h5>
							<p class="card-text">{{event.description}}</p>
							<p class="card-text">{{event.type}}</p>
							<p class="card-text">{{event.Date|date('F j, Y, g:i a', "Europe/Paris")}}</p>
							<a href="/details/{{event.id}}" class="btn btn-primary">Details</a>
							<a href="/edit/{{event.id}}" class="btn btn-warning">Edit</a>
							<a href="/delete/{{event.id}}" class="btn btn-danger">Delete</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
	<br>
	{% include "components/footer.html.twig"%}
{% endblock %}
